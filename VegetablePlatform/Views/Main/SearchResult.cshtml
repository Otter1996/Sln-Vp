@model IEnumerable<VegetablePlatform.Models.Product>

@{
    if (Session["Member"] != null)
    {
        Layout = "~/Views/Shared/_LayoutMember.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<body>
    @if (Model.Count() == 0)
    {
        <br><br>
        <p class="h2 text-center" style="color:white">找不到相關產品資訊，請換個名稱搜尋或直接連絡客服。</p>
    }
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-4 col-xl-3">
                <p></p>
                <div class="img-thumbnail">
                    <img src="~/Images/@item.Img" style=" width:70%; margin:50px;">
                    <div>
                        <h2>@item.Name</h2>
                        <p>單價:@item.Price</p>
                        <p align="right"><a class="btn btn-primary" href="@Url.Action("ReadDetail","Product",new {Pid =@item.Pid})">查看詳情</a></p>
                        <p></p>
                    </div>
                </div>
            </div>
        }
    </div>
</body>

