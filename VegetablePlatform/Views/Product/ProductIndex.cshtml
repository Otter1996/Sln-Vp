@model IEnumerable<VegetablePlatform.Models.Product>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-4 col-xl-3">
            <p></p>
            <div class="img-thumbnail">
                <img src="~/Images/@item.ProductDescription.Img_1" style=" width:70%; margin:50px;">
                <div>
                    <h2>@item.Name</h2>
                    <p>單價:@item.Price</p>
                    <p align="right"><a class="btn btn-primary" href="@Url.Action("ReadDetail","Product",new {Pid =@item.Pid})">查看詳情</a></p>
                    <p></p>
                </div>
            </div>
        </div>
    }
</div>


